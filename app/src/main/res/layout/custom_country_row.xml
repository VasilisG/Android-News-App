<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/countryImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/countryImageDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>


    <TextView
        android:id="@+id/countryTextView"
        android:layout_width="307dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/countryImageView"
        android:layout_toRightOf="@+id/countryImageView"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/countryImageView" />

</RelativeLayout>