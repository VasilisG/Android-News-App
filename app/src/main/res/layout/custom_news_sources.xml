<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/newsSourceImageView"
        android:contentDescription="@string/newsSourceImageDescription"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/newsSourceTitleView"
        android:layout_width="256dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/newsSourceImageView"
        android:layout_toRightOf="@id/newsSourceImageView"
        android:gravity="top"
        android:textAlignment="center"
        android:textColor="@color/lightYellow"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/newsSourceDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/newsSourceImageView"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/newsSourceImageView"
        android:layout_toRightOf="@id/newsSourceImageView"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/lightGray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/favouriteIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/favouriteSourceImageDescription"
        app:srcCompat="@android:drawable/btn_star_big_off" />

</RelativeLayout>